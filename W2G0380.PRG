FUNCTION W2G0380()
MEMVAR GETLIST
CLEAR
SELECT 3
APPEND BLANK
REPLACE AUDIT->OLD_REC_ID  WITH M->REC_ID
REPLACE AUDIT->OLD_NAME    WITH M->NAME
REPLACE AUDIT->OLD_ADDRES  WITH M->ADDRESS
REPLACE AUDIT->OLD_CITY    WITH M->CITY
REPLACE AUDIT->OLD_STATE   WITH M->STATE
REPLACE AUDIT->OLD_ZIP     WITH M->ZIP
SELECT 1
M->L_NAME   = PAYEE->LAST_NAME
M->F_NAME   = PAYEE->FIRST_NAME
M->INIT  = PAYEE->MIDDLE_INT
@  0, 28  SAY "PAYEE INFORMATION UPDATE"
@  2, 10  SAY "SSN:"
@  2, 22  GET  M->REC_ID PICTURE '999999999'
@  4, 10  SAY "LAST NAME:"
@  4, 22  GET  M->L_NAME
@  6, 10  SAY "FIRST NAME:"
@  6, 22  GET  M->F_NAME
@  8, 10  SAY "MIDDLE INT:"
@  8, 22  GET  M->INIT
@ 10, 10  SAY "ADDRESS:"
@ 10, 22  GET  M->ADDRESS
@ 12, 10  SAY "CITY:"
@ 12, 22  GET  M->CITY
@ 14, 10  SAY "STATE:"
@ 14, 22  GET  M->STATE
@ 16, 10  SAY "ZIP:"
@ 16, 22  GET  M->ZIP PICTURE '99999'
READ
REPLACE PAYEE->RECORD_ID  WITH M->REC_ID
REPLACE PAYEE->LAST_NAME  WITH M->L_NAME
REPLACE PAYEE->FIRST_NAME WITH M->F_NAME
REPLACE PAYEE->MIDDLE_INT WITH M->INIT
REPLACE PAYEE->ADDRESS    WITH M->ADDRESS
REPLACE PAYEE->CITY       WITH M->CITY
REPLACE PAYEE->STATE      WITH M->STATE
REPLACE PAYEE->ZIP        WITH M->ZIP
SELECT 3
REPLACE AUDIT->NEW_REC_ID  WITH M->REC_ID
REPLACE AUDIT->NEW_NAME    WITH M->L_NAME +', ' + ;
                                M->F_NAME +' '  + ;
                                M->INIT
REPLACE AUDIT->NEW_ADDRES  WITH M->ADDRESS
REPLACE AUDIT->NEW_CITY    WITH M->CITY
REPLACE AUDIT->NEW_STATE   WITH M->STATE
REPLACE AUDIT->NEW_ZIP     WITH M->ZIP
REPLACE AUDIT->DATE_UPDT   WITH DATE()
REPLACE AUDIT->TIME_UPDT   WITH TIME()
SELECT 1
CLEAR
RETURN (NIL)
